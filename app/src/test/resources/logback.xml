<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="pretty" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%cyan(%d{HH:mm:ss.SSS}) %gray([%thread]) %highlight(%-5level) %magenta(%logger{36}) [jobb='%X{jobbType}', sakId='%X{sakId}', behandlingId='%X{behandlingId}'] - %msg%n
            </pattern>
        </encoder>
    </appender>

    <appender name="auditLogger" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%m%n%xEx</pattern>
        </layout>
    </appender>

    <logger level="INFO" name="auditLogger" additivity="false">
        <appender-ref ref="auditLogger"/>
    </logger>
    
    <root level="INFO">
        <appender-ref ref="pretty"/>
    </root>

    <logger name="secureLog" level="TRACE" additivity="false">
        <appender-ref ref="pretty"/>
    </logger>

    <logger name="io.netty" level="INFO" />
    <logger name="no.nav" level="INFO" />
    <logger name="io.confluent" level="WARN" />
    <logger name="no.nav.aap.komponenter.dbconnect" level="ERROR" />

</configuration>